body {
    height: 200mm;
    width: 287mm;
    text-align: center;
    /* to centre page on screen*/
}

strong {
    font-weight: bold;
    TEXT-TRANSFORM: uppercase;
}

.vcenter {
    display: table-cell;
    vertical-align:middle;
}

.hcenter {
    margin-left: auto;
    margin-right: auto;
}


#wrap {
    background: url(<%= asset_path "bg_certificate.png" %>) no-repeat;
    height: 200mm;
    width: 287mm;
}

#wrap {
    background-color: #fdfdfd;
}

#head {
    height: 65mm;
    width: 287mm;

}

#content_head {
    height: 30mm;
    width: 287mm;

}

h1 {
    font-weight: bold;
    font-size: 12mm;
}

#content {
    height: 85mm;
    width: 287mm;

    display: table;
}

#content p {
    font-family: verdana;
    font-size: 9mm;
    line-height: 10mm;
    width: 270mm;
}

#foot {
    display: table;
    height: 20mm;
    width: 287mm;
    background-color: black;

}

#foot p {
    text-align: right;
    color: white;
    padding-right: 5mm;
}